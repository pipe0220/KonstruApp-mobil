<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpcionesLogin">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:gravity="center">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/m_bottom_height"
            android:hint="Email"
            app:cornerRadius="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Ingresar_email"
            android:text="@string/Ingrear_email"
            android:layout_width="240dp"
            android:layout_height="@dimen/m_bottom_height"
            android:background="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            app:cornerRadius="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Ingresar_google"
            android:text="@string/Ingrear_google"
            android:layout_width="240dp"
            app:icon="@drawable/google"
            android:background="@color/white"
            app:iconSize="24dp"
            app:iconTintMode="multiply"
            android:textAlignment="center"
            android:layout_height="@dimen/m_bottom_height"
            android:layout_marginTop="20dp"
            app:cornerRadius="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Ingresar_facebook"
            android:text="@string/Ingrear_facebook"
            android:layout_width="240dp"
            app:icon="@drawable/facebook"
            android:background="@color/white"
            app:iconSize="24dp"
            android:textAlignment="center"
            app:iconTintMode="multiply"
            android:layout_height="@dimen/m_bottom_height"
            android:layout_marginTop="20dp"
            app:cornerRadius="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Ingresar_twitter"
            android:text="@string/Ingrear_twitter"
            android:layout_width="240dp"
            app:icon="@drawable/twitter"
            android:background="@color/white"
            app:iconSize="24dp"
            android:textAlignment="center"
            app:iconTintMode="multiply"
            android:layout_height="@dimen/m_bottom_height"
            android:layout_marginTop="20dp"
            app:cornerRadius="8dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>